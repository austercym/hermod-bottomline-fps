<Configuration status="debug">
    <Appenders>
        <!--
        <Kafka name="KAFKA" topic="log_hermod_bottomline_fps_001" syncsend="true" ignoreexceptions="false">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
            <Property name="bootstrap.servers">confluent-node1:9092,confluent-node2:9092,confluent-node3:9092,confluent-node4:9092,confluent-node5:9092,confluent-node6:9092</Property>
        </Kafka>
        -->
        <RollingFile name="FILE" filename="logs/hermod-bottomline-fps.log" filePattern="logs/hermod-bottomline-fps-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
                <!--<TimeBasedTriggeringPolicy interval="1" modulate="true" />-->
            </Policies>
            <DefaultRolloverStrategy max="100" />
        </RollingFile>
        <Async name="ASYNC">
            <!--<AppenderRef ref="KAFKA" />-->
            <AppenderRef ref="FILE" />
        </Async>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="ASYNC" />
        </Root>
    </Loggers>
</Configuration>